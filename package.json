{
	"name": "mellow",
	"private": true,
	"scripts": {
		"clean": "del-cli _site",
		"dev:css": "npx tailwindcss -i style.css -o _site/style.css -w",
		"dev:11ty": "npx @11ty/eleventy --serve",
		"dev": "run-p dev:*",
		"build:css": "NODE_ENV=production npx tailwindcss -i style.css -o _site/style.css -m",
		"build:11ty": "npx @11ty/eleventy",
		"build": "npm run clean && run-s build:*"
	},
	"prettier": {
		"useTabs": true,
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	},
	"devDependencies": {
		"@11ty/eleventy": "^2.0.0",
		"@11ty/eleventy-plugin-rss": "^1.2.0",
		"autoprefixer": "^10.4.13",
		"cssnano": "^5.1.15",
		"del-cli": "^5.0.0",
		"luxon": "^3.3.0",
		"markdown-it-link-attributes": "^4.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.4",
		"tailwindcss": "^3.2.7"
	}
}
